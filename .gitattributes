# Declare files that will always have CRLF line endings on checkout.
*.sh text eol=lf
*.lua text eol=lf
*.txt text eol=lf
*.cfg text eol=lf
*.rc text eol=lf

# Packages #
############
# it's better to unpack these files and commit the raw source
# git has its own built in compression methods
*.7z     filter=lfs diff=lfs merge=lfs -text
*.dmg    filter=lfs diff=lfs merge=lfs -text
*.gz     filter=lfs diff=lfs merge=lfs -text
*.iso    filter=lfs diff=lfs merge=lfs -text
*.jar    filter=lfs diff=lfs merge=lfs -text
*.rar    filter=lfs diff=lfs merge=lfs -text
*.tar    filter=lfs diff=lfs merge=lfs -text
*.zip    filter=lfs diff=lfs merge=lfs -text
*.vbsp   filter=lfs diff=lfs merge=lfs -text
*.ver    filter=lfs diff=lfs merge=lfs -text
*.vpk    filter=lfs diff=lfs merge=lfs -text
*.rad    filter=lfs diff=lfs merge=lfs -text
*.inf    filter=lfs diff=lfs merge=lfs -text
*.bsp    filter=lfs diff=lfs merge=lfs -text
*.nav    filter=lfs diff=lfs merge=lfs -text
*.lmp    filter=lfs diff=lfs merge=lfs -text
*.cache  filter=lfs diff=lfs merge=lfs -text
*.pack   filter=lfs diff=lfs merge=lfs -text
*.vmt    filter=lfs diff=lfs merge=lfs -text
*.vtf    filter=lfs diff=lfs merge=lfs -text
*.vtx    filter=lfs diff=lfs merge=lfs -text
*.mdl    filter=lfs diff=lfs merge=lfs -text
*.phy    filter=lfs diff=lfs merge=lfs -text
*.vvd    filter=lfs diff=lfs merge=lfs -text
*.wav    filter=lfs diff=lfs merge=lfs -text
*.png    filter=lfs diff=lfs merge=lfs -text
*.mdmp   filter=lfs diff=lfs merge=lfs -text
*.mp3    filter=lfs diff=lfs merge=lfs -text
*.ttf    filter=lfs diff=lfs merge=lfs -text
*.pcf    filter=lfs diff=lfs merge=lfs -text
*.ain    filter=lfs diff=lfs merge=lfs -text

*.vdf    filter=lfs diff=lfs merge=lfs -text